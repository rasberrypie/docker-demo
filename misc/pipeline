@Library("pipeline-shared-lib")
import com.acceleratedskillup.*;
def commit_id
pipeline {
    agent any
    stages {
        stage("Checkout") {
            steps{
                script {
                    checkout scm
                    sh "git rev-parse --short HEAD > .git/commit-id"                        
                    commit_id = readFile('.git/commit-id').trim()
                    sh "echo ${commit_id}"
                }
            }
        }
        
        stage ("Build Image") {
            steps {
                script {
                   def container = new Container()
                   container.build(${commit_id}", "jenkinsrepo", ".")
                }
            }
        }
    }
}
