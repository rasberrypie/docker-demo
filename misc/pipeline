@Library("pipeline-shared-lib")
import com.acceleratedskillup.*;
def imageTag
pipeline {
    agent any
    environment {        
        version = "1.0.0"
        imageName = "jenkinsrepo"
    }
    stages {
        stage("Checkout") {            
            steps{
                script {
                    checkout scm                    
                    imageTag = new Tag().generateImageTag("qa", "${version}")
                }
            }
        }   
        stage ('NPM Build') {
          agent {
              docker {image ('node:4.6')}
          }
          steps {              
              sh 'npm install --only=dev'
              sh 'npm test'
          }
        }
        stage ("Build Image") {
            steps {
                script {                   
                   new Container().buildImage("${imageName}", "${imageTag}", ".")
                }
            }
        }
        stage('Remove Unused Docker Image') {
            steps {
                script {
                    swissknife.printName "John Doe"
                }
            }
        }
    }
    post { 
        always { 
            step([$class: 'WsCleanup'])
          }
    }
}
