@Library("pipeline-shared-lib")
import com.acceleratedskillup.*;
def imageTag
pipeline {
    agent any
    environment {        
        VERSION = "1.0.0"
    }
    stages {
        stage("Checkout") {            
            steps{
                script {
                    checkout scm                    
                    imageTag = new Tag().generateImageTag(env.BRANCH_NAME, "${VERSION}")
                }
            }
        }        
        stage ("Build Image") {
            steps {
                script {                   
                   new Container().buildImage("jenkinsrepo", "${imageTag}", ".")
                }
            }
        }
    }
}
