@Library("pipeline-shared-lib")
import com.acceleratedskillup.*;
def imageTag
pipeline {
    agent any
    environment {
        FIELD_NAME = 'version'
        VERSION = "1.0.${env.BUILD_ID}"
    }
    stages {
        stage("Checkout") {
            steps{
                script {
                    checkout scm
                    def tag = new Tag()
                    imageTag = tag.generateImageTag("develop", "${VERSION}")
                }
            }
        }        
        stage ("Build Image") {
            steps {
                script {
                   def container = new Container()
                   container.buildImage("jenkinsrepo", "${imageTag}", ".")
                }
            }
        }
    }
}
